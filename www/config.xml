<?xml version='1.0' encoding='utf-8'?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap        = "http://cordova.apache.org/ns/1.0"
        id        = "com.glanbia.convertor"
        version   = "1.0.0">
    <name>CurrencyCovertor</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@callback.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    
   <feature name="http://api.phonegap.com/1.0/network"/>

   <preference name="phonegap-version" value="2.9.0" />
   <preference name="target-device" value="universal" />

   <access origin="*" />

   <!-- Icons -->
   <icon src="icon.png" width="64" height="64" gap:role="default" />
   <icon src="img/icon-72x72.png" width="72" height="72" gap:platform="android" gap:density="hdpi" />
   <icon src="img/icon-96x96.png" width="96" height="96" gap:platform="android" gap:density="xhdpi" />
   <icon src="img/icon-72x72.png" width="72" height="72" gap:platform="ios" />

   <!-- Splash Screens -->
   <gap:splash src="splash.png" />
   <gap:splash src="img/splash-160x220.png" gap:platform="android" gap:density="ldpi" />
   <gap:splash src="img/splash-450x650.png" gap:platform="android" gap:density="mdpi" />
   <gap:splash src="img/splash-450x650.png" gap:platform="android" gap:density="hdpi" />
</widget>
